@import '../../build/stylus/utils/color'
#card-page
   hr
      margin: 30px 0
      background-color: #FB2E49
.card-diseases-page
   .h-section
      margin-bottom: 40px
   #diseases-description
      padding: 30px 0
   #diseases-name
      position relative
      background-image: url(../../img/hero-slide.jpg)
      &:before
         content: ''
         position absolute
         top: 0
         left 0
         right 0
         bottom: 0
         background-color: rgba(255,255,255,0.6);
         background-size: cover
      .wrap
         height 300px
         padding: 50px 0
         display flex
         flex-direction: column
         justify-content: space-between
         filter: brightness(1)
      .buttons
         .btn
            width 230px
            padding: 18px
            margin-right: 30px
            font-size: 18px
            color: #fff
            background-color: $main-color
            &:hover
               background-color: $main-color-hover
            &:last-child
               margin-right: 0
   #watch-and-reviews
      padding: 40px 0
      .slider-wrap
         margin: 30px 0
      .reviews-card
         min-height: auto
         padding: 30px
         text-align: start
         align-items: start
         .description
            margin: 0 0 40px
      .subtitle
         display block
         font-size: 23px
         font-weight: 700
         text-transform: uppercase
         margin-bottom: 20px
   #form
      padding: 80px 0 50px
.card-news-page
.card-scinece-page
   padding: 15px 0 70px
   #breadcrumbs
      margin-bottom: 40px
   .title
      margin 0
      display block
      font-size: 24px
      font-weight: 800
   .description
      margin-bottom: 40px
   .date-block
      font-weight: 700
      .publish
         padding-right: 10px
   .science-description
      margin-top: 50px
      .headline
         display block
         margin-bottom: 30px
         font-size: 18px
         font-weight: 700
      .list
         margin: 0
         padding: 0
         list-style-type: none
         height 60px
         display flex
         flex-direction: column
         flex-wrap: wrap
         .list-item
            padding-left: 10px
            position relative
            &:before
               content: ''
               position: absolute
               top: calc(50% - 1.5px)
               left: 0
               width 3px
               height 3px
               border-radius: 50%
               background-color: $main-color
      .science-name
         display: block
         margin-bottom: 40px
         font-size: 18px
         font-weight: 700
         color: $main-color
      .btn-science
         position relative
         padding: 15px 65px
         font-weight: 300
         color: #fff
         background-color: $main-color
         &:before
            content: ''
            position: absolute
            top calc(50% - 12px)
            left: 30px
            width 22px
            height 22px
            background-image: url(../../img/svg/docs.svg)
            background-size: cover
@media(max-width 991px)
   .card-diseases-page
      #watch-and-reviews
         .left-section
            margin-bottom: 20px
@media(max-width 767px)
   .card-diseases-page
      .h-section
         margin-bottom: 20px
      #diseases-name
         .wrap
            height 250px
            padding: 30px 0 15px
         .buttons
            .btn
               font-size: 16px
               padding: 12px
               margin-bottom: 20px
      #watch-and-reviews
         .subtitle
            font-size: 20px
      #form
         padding: 40px 0
   .card-news-page
   .card-scinece-page
      padding: 15px 0 40px
      .title
         font-size: 18px
      .science-description
         margin-top: 30px
         .headline
            margin-bottom: 20px
         .list
            height auto
            .list-item
               margin-bottom: 10px
         .science-name 
            font-size: 16px
   