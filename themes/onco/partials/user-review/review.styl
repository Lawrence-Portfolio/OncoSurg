@import '../../build/stylus/utils/color'
.col-review
   margin-bottom: 40px
   box-shadow: 3px 3px 10px rgba(0,0,0,0.1)
.user-comment
   padding: 40px 15px
   border-radius: 5px
.username-wrap
   display flex
   justify-content: space-between
   .username
      font-size: 24px
      font-weight: 700
      color: $main-color
   .admin
      font-size: 18px
   .star
      width 24px
.description
   margin: 30px 0
.admin-feedback
   margin: 30px 0 0 60px
@media(max-width 767px)
   .col-review
      margin-bottom: 20px
   .user-comment
      padding: 20px 0
   .description
      margin: 20px 0
   .username-wrap
      flex-direction: column
      .username
         margin-bottom: 10px
   .admin-feedback
      margin: 30px 0 0 40px
