@import "./utils/fonts"
@import "./utils/color"

html
   scroll-behavior smooth
body
   font-family: 'Circe'
   line-height: 1.2
main
   overflow hidden
   min-height calc(100vh - 139px - 474px)
.hidden
    display: none !important;
.phone:before
   background-image: url(../img/svg/phone.svg)
   background-size: cover
.mail:before
   background-image: url(../img/svg/mail.svg)
   background-size: cover
.address:before
   background-image: url(../img/svg/address.svg)
   background-size: cover
.fax:before
   background-image: url(../img/svg/fax.svg)
   background-size: cover
.metro:before
   background-image: url(../img/svg/metro.svg)
   background-size: cover
.date
   position relative
   padding-left: 25px
   &:before
      content: ''
      position absolute
      top: calc(50% - 8px)
      left: 0
      width: 16px
      height 16px
      background-image: url('../img/svg/month-calendar.svg')
.h-section
   display: block
   font-size: 36px
   text-transform: uppercase
.bold
   font-weight: 700
.extra-bold
   font-weight: 800
.h-decor
   position relative
   padding-bottom: 40px
   &:before
      content: ''
      position: absolute
      bottom: 0
      width 170px
      left calc(50% - 85px)
      height 1px
      background-color: #ff0015
.blue-section-decor
   position relative
   background: linear-gradient(-32deg, #0077c0 0%, #4958c9 100%);
   &:before
      content: ''
      position: absolute
      left: -15%;
      width: 100%;
      height: 50px;
      bottom: 5px;
      background: linear-gradient(-3deg, #0077c0 0%, #4958c9 100%);
      // background: linear-gradient(-170deg, #2d6dc1 25%, #3c63c4 85%)
      transform: skew(87deg, -3deg);
.section-decor-top-left
   position relative
   background-color: #F6F6F6
   &:before
      content: ''
      position: absolute
      right: 15%;
      top: 25px;
      width 100%
      height 50px
      background-color: #F6F6F6
      transform: skew(-87deg, 3deg);
      z-index -1
.section-decor-top-rigth
   position relative
   background-color: #F6F6F6
   &:before
      content: ''
      position: absolute
      left: 20%;
      top: 3px;
      width 100%
      height 50px
      background-color: #F6F6F6
      transform: skew(87deg, -3deg);
      z-index -1
.section-decor-bottom-right
   position relative
   background-color: #F6F6F6
   &:before
      content: ''
      position: absolute
      left: 20%;
      bottom: 3px;
      width: 100%;
      height: 50px;
      background-color: #F6F6F6
      transform: skew(-87deg, 3deg);
      z-index -1

.btn-modal
   height 60px
   padding: 0
   color: #fff
   background: linear-gradient(104deg, #006fbd 0%, #0089c9 100%);
   font-size: 18px
   border-radius: 30px
   transition: .2s
   &:hover
      color: #fff
      box-shadow: inset 0 0 15px 1px rgba(0,0,0,0.3);
.stethoscope
   padding-left: 30px
   position relative
   &:before
      content: ''
      position absolute
      top: calc(50% - 14px)
      width 25px
      height 25px
      left: 25px
      background-image: url(../img/svg/stethoscope-w.svg)
      background-size: cover
.triangle
   position relative
   padding-left: 50px
   &:before
      content: ''
      position absolute
      top: calc(50% - 5px);
      left: 25px
      border: 5px solid transparent;
      border-left: 8px solid #fff;
.btn-submit
   font-size: 24px
   padding: 12px 0
   color: #fff
   background-color: $main-color
   text-transform: uppercase
   box-shadow: 2.237px 3.316px 4px rgba(0,0,0,0.1)
   &:hover
      color: #fff
      background-color: $main-color-hover
.btn-load
   margin: 25px 0
   font-size: 24px
   padding: 12px 0
   color: #fff
   background-color: $main-color
   &:hover
      color: #fff
      background-color: $main-color-hover
      box-shadow: 2.237px 3.316px 4px rgba(0,0,0,0.1)
.btn-w-100
   width 100%

@media (min-width: 1200px)
   .container
      max-width 1200px
@media (max-width: 1199px)
   .blue-section-decor:before
      background: linear-gradient(-4deg, #0077c0 0%, #4958c9 100%);
@media (max-width: 991px)
   .blue-section-decor:before
      background: linear-gradient(-10deg, #0077c0 0%, #4958c9 100%);
@media (max-width: 991px)
   .blue-section-decor:before
      display none
@media (max-width: 767px)
   .h-section-bold
      font-size: 24px
   .h-section
      font-size: 24px
      // padding-bottom: 20px
@media (max-width: 575px)
   .btn-submit
      font-size: 20px
      padding: 8px 0
   .btn-load
      margin: 0
      font-size: 20px
      padding: 8px 0
