.scrollTop
   visibility hidden
   opacity 0
   transition: all .2s ease
   .scroll
      display: flex
      justify-content: center
      align-items: center
      position: fixed
      bottom: 150px
      right 100px
      width 64px
      height 64px
      color: #000
      text-decoration: none
      background-color: #DADEF3
      border-radius: 50%
      font-size: 28px
      box-shadow: 0 0 5px 0 #1B6FBB
      z-index 100
      transition: all .2s ease
      &:hover
         filter: brightness(103%)
.show
   visibility visible
   opacity 1

@media(max-width 1600px)
   .scrollTop
      .scroll
         bottom: 80px
         right 30px

@media(max-width 767px)
   .scrollTop
      .scroll
         width: 40px
         height 40px
         font-size: 20px