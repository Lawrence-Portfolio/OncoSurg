@import '../../build/stylus/utils/color'

#hero
   overflow hidden
   position relative
   &:before
      content: ''
      position: absolute
      bottom 0
      left: -30px;
      width 20%
      height 100px
      transform: skewX(30deg)
      background-color: rgba(255,0,21,0.6);
      z-index 1
   &:after
      content: ''
      position: absolute
      bottom 0
      right: -30px;
      width calc(80% - -20px)
      height 100px
      transform: skewX(30deg)
      background-color: rgba(0,112,189,0.8313725490196079);

.hero-slider-wrap
   position relative
   .tns-outer 
      .tns-controls > [data-controls="prev"]
         left 100px
      .tns-controls > [data-controls="next"]
         right 100px
      .tns-nav
         position: absolute
         bottom: 20px
         z-index 2
         width 100%
         text-align: center
         button
            position relative
            width 11px
            height 11px
            background-color: #fff
            border: none
            padding: 0
            margin: 2px
            border-radius: 50%
            outline: none
            &:before
               display none
               content: ''
               position absolute
               top: 3px
               left: 3px
               width 5px
               height 5px
               background-color: $main-color
               border-radius: 50%
            &:hover:before
               display block
         .tns-nav-active
            &:before
               display block
.slider-wrap
   padding: 60px 100px
   position relative
.nav-thumbs-wrap
   display flex
   justify-content: center
   overflow hidden
.nav-thumbs
   position relative
   text-align: center
   padding: 0 40px
   &:after
      content: ''
      position absolute
      left: 100%
      top: 8px
      height 1px
      width 600px
      background-color: rgba(0,112,189,0.5019607843137255);
   &:before
      content: ''
      position absolute
      right 100%
      top: 8px
      height 1px
      width 600px
      background-color: rgba(0,112,189,0.5019607843137255);
   button
      padding: 0
      margin: 1px
      width 11px
      height 11px
      border-radius: 50%
      background-color: #000
      outline: none
      border: none
      &:hover
         background-color: $main-color
   .tns-nav-active
      background-color: $main-color
.tns-outer
   .tns-controls > button
      display flex
      justify-content: center
      align-items: center
      position: absolute
      top: calc(50% - 27.5px)
      padding: 0
      width 55px
      height 55px
      border: none
      background-color: $main-color
      z-index 1
      outline: none
      transition: .2s
      &:hover
         background-color: $main-color-hover
      i
         color: #fff
         font-size: 28px
   .tns-controls > [data-controls="prev"]
      left 0
   .tns-controls > [data-controls="next"]
      right 0

@media(max-width 1199px)
   .hero-slider-wrap
      .img-slide
         height 600px

@media(max-width 991px)
   #hero
      &:after
      &:before
         height 65px
   .hero-slider-wrap
      .tns-outer 
         .tns-controls > [data-controls="prev"]
            left 50px
         .tns-controls > [data-controls="next"]
            right 50px
      .img-slide
         height 400px

@media(max-width 767px)
   .tns-outer 
      .tns-controls > button
         width 35px
         height 35px
         i
            font-size: 18px
   .news-slider-wrap
      padding: 0 20px
   .reviews-slider-wrap
      padding: 0 10px
   .slider-wrap
      margin: 30px 0
      .tns-outer 
         .tns-controls > [data-controls="prev"]
            left -15px
         .tns-controls > [data-controls="next"]
            right -15px
@media(max-width 575px)
   .hero-slider-wrap
      .tns-outer 
         .tns-controls > [data-controls="prev"]
            left 15px
         .tns-controls > [data-controls="next"]
            right 15px
      .img-slide
         height 400px
   .nav-thumbs
      padding: 0 10px

