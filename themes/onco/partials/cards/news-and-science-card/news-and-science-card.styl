.card-link
   display block
   color: #000
   box-shadow: 3px 3px 7px rgba(0,0,0,0.1)
   transition: all 0.5s ease
   border-radius: 5px
   width 100%
   &:hover
      box-shadow: 3px 3px 10px rgba(0,0,0,0.3)
      text-decoration: none
      color: #000
.card
   min-height: 380px
   padding: 10px 10px 20px 10px
   justify-content: space-between
   border: none
   .card-img-top
      border-radius: 0
   .card-body
      padding: 15px 0 20px
   .card-text
      font-weight: 700
@media(max-width 767px)
   .card
      min-height: auto
      max-width: 320px
      margin: 0 auto