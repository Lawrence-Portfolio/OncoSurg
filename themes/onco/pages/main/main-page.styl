@import '../../build/stylus/utils/color'

.main-page
   .video
      text-align: center
      position relative
      width 100%
      .YouTube-icon
         position: absolute
         .tablet
            transition: .3s
            fill: #fff
         .arrow
            transition: .3s
            fill: transparent
      &:hover
         .tablet
            fill: #FB001A
         .arrow
            fill: #fff
   .h-section
      text-align: center
   #offer
      background: linear-gradient(263deg, #f7fbff 0%, #f0fbff 100%);
      padding: 40px 0
   #about-person
      padding-top: 60px
      .title
         display: block
         margin-bottom: 60px
         color: $main-color
         text-align: center
         font-size: 24px
         font-weight: 700
      .wrap
         display flex
         max-width: 870px
         .person-info
            margin-left: 60px
            padding-top: 20px
            .info
               display: block
               margin-bottom: 30px
            .name
               font-size: 24px
               font-weight: 800
               color: $main-color
               text-transform: uppercase
   #video
      position relative
      padding: 60px 0
      background-image: url(../../img/bg-blur.jpg)
      background-repeat: no-repeat
      background-size: cover
      background-position: center
      &:before
         content: ''
         position absolute
         top 0
         left: -40px;
         width 20%
         height 100px
         transform: skewX(-35deg)
         background-color: rgba(255,0,21,0.6);
      .video
         position relative
         width 100%
         .YouTube-icon
            top calc(50% - 35px)
            left: calc(50% - 50px)
            width 100px
   #form
      padding: 80px 0
      .left-section
         margin-top: 60px
         color: #fff
         .headline
            position relative
            display: inline-block
            font-size: 40px
            font-weight: 700
            padding-bottom: 40px
            &:before
               content: ''
               position absolute
               bottom: 0
               left: 0
               right 0
               height 1px
               background-color: #fff
         .info-block
            padding-top: 45px
            .info
               display flex
               flex-wrap: wrap
               font-size: 24px
               margin-bottom: 25px
            .info-text
               padding-right: 10px
      .form-main
         position relative
         padding: 40px 30px
         background-color: #fff
         border-radius: 3px
         box-shadow: 30px 30px 0 0 #09578c
         .form-label
            font-size: 18px
            font-weight: 700
         .form-group
            margin-bottom: 0.7rem
         .custom-checkbox
            margin: 20px 0
         .form-label
            padding-left: 6px
            margin-bottom: 0.7rem
   #news
      padding-top: 100px
      background-color: #f6f6f6
      .card-link
         box-shadow: none
         .card
            padding: 0
            background-color: transparent
   #reviews
      padding: 50px 0
   #prof-materials
      padding: 100px 0 60px
      .video-gallery
         margin-top: 60px
      .video 
         .YouTube-icon
            top: calc(50% - 28px)
            left calc(50% - 40px)
            width 80px
   #our-contacts
      padding: 50px 0 80px
      .h-section
         margin-bottom: 80px
      .info-block
         margin-bottom: 50px
         &:last-child
            margin-bottom: 0
         .info
            color: #000
            margin-bottom: 20px
            display block
            font-size: 24px
            font-weight: 300
            padding-left: 60px
         .icon
            position relative
            font-weight: 400
            &:before
               content: ''
               position absolute
               left: 0
               top: calc(50% - 23px)
               width 46px
               height 46px
               background-size: cover
      .btn-wrap
         margin-top: 60px
         display: flex
         justify-content: space-between
         flex-wrap: wrap
         .btn-modal
            height 58px
            width 220px
            text-align: start
            line-height: 1.1
            &:last-child
               margin-right: 0
         .stethoscope
            padding-left: 70px
      #map
         width 100%
         height 100%
@media(max-width 1199px)
   .main-page
      #form 
         .left-section 
            .info-block 
               .info
                  font-size: 18px
@media(max-width 991px)
   .main-page
      #form
         padding: 50px 0 80px
         .right-section
            margin-top: 30px
         .left-section
            margin-top: 0
      #our-contacts
         #map
            margin-top: 20px
            height 300px
@media(max-width 767px)
   .main-page
      .h-decor
         padding-bottom: 20px
      #offer
         padding: 20px 0
      #prof-materials
         padding: 40px 0 
      #news
         padding-top: 30px
      #reviews
         padding-top: 30px
      #about-person 
         padding-top: 40px
         .headline
            font-size: 18px
         .wrap
            flex-direction: column
            justify-content: center
            align-items: center
            .person-info
               margin-left: 0
      #our-contacts
         padding: 40px 0 60px
         .h-section
            margin-bottom: 30px
         .info-block 
            .info
               font-size: 17px
               padding-left: 50px
               margin-bottom: 10px
            .icon
               &:before
                  top: calc(50% - 18px)
                  width: 36px
                  height 36px
         .btn-wrap
            margin-top: 40px
            .btn-modal
               margin-bottom: 20px
@media(max-width 575px)
   .main-page
      #form 
         padding: 50px 0
         .left-section
            .headline
               padding-bottom: 25px
            .info-block
               padding-top: 25px
            .headline
               font-size: 24px
         .form-main
            padding: 30px 15px;
            box-shadow: none
            margin: 0 -15px
            border-radius: 0
@media(max-width 470px)
   .main-page
      #our-contacts 
         .btn-wrap 
            .btn-modal
               width 100%